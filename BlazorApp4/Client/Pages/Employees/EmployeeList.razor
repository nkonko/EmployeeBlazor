@page "/employees"
@inject HttpClient httpClient;

<div class="container">
    @if (Employees.Any())
    {
        <table class='table table-hover'>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Area</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Employees)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Area</td>

                    </tr>
                }
            </tbody>
        </table>
        @foreach (var item in Employees)
        {
            <div class="col-lg-12 text-right">
                <a href="/employee/edit/@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                <button class="btn btn-sm btn-secondary" @onclick="@ModalShow">Delete</button>
            </div>

            @if (showModal)
            {
                <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Confirm delete</h4>
                                <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                                <p>Are you sure?</p>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn" @onclick="@ModalCancel">Cancel</button>
                                <button type="button" class="btn btn-danger" @onclick="@(e => DeleteEmployee(item.Id))">Delete</button>
                            </div>

                        </div>
                    </div>
                </div>
            }
        }
        <hr />
    }
    else
    {
        <p>No Employees Found</p>
    }
</div>